SELECT 
cli.nome AS nome_cliente,
ven.produto AS produto_comprado
FROM clientes cli
LEFT OUTER JOIN vendas ven
       ON ven.id_cliente = cli.id_cliente; 

SELECT 
 COALESCE(cli.nome, 'Cliente não informado') AS cliente,
ven.produto,
ven.valor
FROM vendas ven
RIGHT OUTER JOIN clientes cli
       ON cli.id_cliente = ven.id_cliente;

SELECT 
c.nome,
c.cidade
FROM clientes c
WHERE c.id_cliente NOT IN (
    SELECT DISTINCT v.id_cliente 
    FROM vendas v
    WHERE v.id_cliente IS NOT NULL
);